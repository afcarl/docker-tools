#!/bin/bash
## Looks into current Folder installs systemd *.service files accepts path as arg
shopt -s nullglob
# shopt -s dotglob # To include hidden files
files=(${1}/*.service)
if [ ! -z "$1" ]; then
if [ ${#files[@]} -gt 0 ]; then cd $1; echo "Installing $(echo ls *.service) from $PWD"; ln -s ${PWD}/*.service  /lib/systemd/system;systemctl daemon-reload ; systemctl enable $(echo ls *.service); systemctl daemon-reload
else echo "Sorry no *.service files in $1"; exit 1;fi;
else
files=(${PWD}/*.service)
 if [ ${#files[@]} -gt 0 ]; then echo "Installing $(echo ls *.service) from $PWD"; ln -s ${PWD}/*.service  /lib/systemd/system; ; systemctl daemon-reload; systemctl enable $(echo ls *.service); systemctl daemon-reload; exit 0; fi;
 echo "Failed: no systemd services found \n usage systemctl-inst /path/to/*.service files or or move into the dir i tested current $PWD "
fi
